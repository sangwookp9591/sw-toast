{
  "name": "sw-toast",
  "version": "1.0.16",
  "description": "React용 공통 Toast 컴포넌트 라이브러리",
  "author": "sangwook.park",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.build.json --emitDeclarationOnly && vite build",
    "build:types": "tsc -p tsconfig.build.json --emitDeclarationOnly",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sangwookp9591/sw-toast.git"
  },
  "keywords": [
    "react",
    "toast",
    "component",
    "ui-library"
  ],
  "bugs": {
    "url": "https://github.com/sangwookp9591/sw-toast/issues"
  },
  "homepage": "https://github.com/sangwookp9591/sw-toast#readme",
  "peerDependencies": {
    "@emotion/react": "^11.14.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.13.5",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "*",
    "@emotion/styled": "^11.14.1",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-onboarding": "^9.1.2",
    "@storybook/react-vite": "^9.1.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "storybook": "^9.1.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
